{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "strictNullChecks": true,
    "types": ["astro/client"],
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["./*"],
      "@assets": ["src/assets"],
      "@components": ["src/components"],
      "@content": ["src/content"],
      "@layouts": ["src/layouts"],
      "@pages": ["src/pages"],
      "@styles": ["src/styles"],
      "@utils": ["src/utils"],
    }
  }
}
